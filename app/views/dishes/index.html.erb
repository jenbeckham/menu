<p id="notice"><%= notice %></p>

<h1>Current Menu Options</h1>
<p></p>
<% @courses.each do |course| %>
  <table>
    <thead>
      <tr><%= course.name %></tr>
      <tr>
        <th>Dish</th>
        <th>Description</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% course.dishes.each do |dish| %>
        <tr>
          <td><%= link_to "#{dish.name}", edit_dish_path(dish) %> </td>
          <td><%= dish.description %></td>
          <td><%= dish.price %></td>
          <td><%= link_to 'Delete', dish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p> <%= link_to "New #{course.name}", new_dish_path(course_id: course.id) %> </p>
<% end %>
